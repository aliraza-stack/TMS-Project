<% unless flash.empty? %>
<script type="text/javascript">
 <% flash.each do |f| %>
 <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'success') %>
 toastr['<%= type %>']('<%= f[1] %>', '', {"closeButton": true, "debug": false, "positionClass": "toast-top-right","progressBar": true, "onclick": null, "showDuration": "400", "hideDuration": "1000", "timeOut": "5000", "extendedTimeOut": "1000", "showEasing": "swing", "hideEasing": "linear", "showMethod": "fadeIn", "hideMethod": "fadeOut",  });

 <% end %>
</script>
<% end %>